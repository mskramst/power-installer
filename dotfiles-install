#!/bin/bash	

git clone https://github.com/mskramst/mydotfiles
cd mydotfiles || exit
cp .bash_git ~
cp .bashrc_ext ~
cp .tmux_conf ~
cp -r .vim ~
cd .config || exit
sudo mv kitty alacritty lynx ~/.config
#add import to top of .bashrc by concatenating it with file and copying over
echo "if [ -f ~/.bashrc_ext ]; then . ~/.bashrc_ext fi" \
	| cat - .bashrc > temp && mv temp .bashrc
